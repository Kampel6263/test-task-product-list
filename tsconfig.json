{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "strictNullChecks": true,
    // "noEmit": true,
    "skipDefaultLibCheck": true,
    "incremental": false,
    "paths": {
      "@src": ["./src"],
      "@src/*": ["./src/*"],
      "@services": ["./src/app/business-logic/services"],
      "@services/*": ["./src/app/business-logic/services/*"],
      "@redux": ["./src/app/business-logic/redux"],
      "@redux/*": ["./src/app/business-logic/redux/*"],
      "@store": ["./src/app/business-logic/redux/store"],
      "@store/*": ["./src/app/business-logic/redux/store/*"],
      "@modules": ["./src/app/modules/index"],
      "@modules/*": ["./src/app/modules/*"],
      "@core": ["./src/app/core"],
      "@core/*": ["./src/app/core/*"],
      "@components": ["./src/app/core/components"],
      "@components/*": ["./src/app/core/components/*"],
      "@shared": ["./src/app/core/shared"],
      "@shared/*": ["./src/app/core/shared/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
